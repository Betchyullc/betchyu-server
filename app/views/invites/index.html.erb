<h1>Listing invites</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Invitee</th>
      <th>Inviter</th>
      <th>Bet</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.status %></td>
        <td><%= invite.invitee %></td>
        <td><%= invite.inviter %></td>
        <td><%= invite.bet %></td>
        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

